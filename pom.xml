            </dependency>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
                <artifactId>hotils-http</artifactId>
                <version>${hotils.version}</version>
            </dependency>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
