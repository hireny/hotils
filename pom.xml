<!--                        </goals>-->
<!--                    </execution>-->
<!--                </executions>-->
<!--            </plugin>-->
        </plugins>
    </build>

    <!--Jar包依赖-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
                <artifactId>hotils-algos</artifactId>
                <version>${hotils.version}</version>
            </dependency>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
                <artifactId>hotils-aop</artifactId>
                <version>${hotils.version}</version>
            </dependency>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
                <artifactId>hotils-cache</artifactId>
                <version>${hotils.version}</version>
            </dependency>
            <dependency>
                <groupId>me.hireny.hotils</groupId>
